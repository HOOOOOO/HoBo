<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
　 　             <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>
    
    <style name="CustomWindowTitleBackground"> 
         <item name="android:background">@drawable/topbar</item> 
    </style> 
    
    <style name="CustomTitleBar" parent="Theme.AppCompat.Light">  
         <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item> <!--设置titlebar的背景-->
    </style> 
    
    <style name="Livingstonetheme" parent="@android:style/Theme.Translucent"> <!--此定义是一个无Title的主题-->
        
　　              <item name="android:windowNoTitle">true</item>
　 　             <item name="android:textSize">18sp</item>
    </style>

     <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item> 
    </style>
    
    <style name="DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="DialogText.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text">
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="Text.Title_Button" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Text.Title" parent="@style/Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="style_left_menu_item" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:background">@drawable/selector_white_btn</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="weibo_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWeiboText1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
        <item name="android:textColorLink">@color/colorWeiboText1</item>
    </style>
    
    <style name="weibo_text_style_night">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNightWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
        <!--  <item name="android:autoLink">web</item>-->
        <item name="android:textColorLink">@color/colorNightWhite</item>
    </style>
    
    <style name="weibo_btn_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item> 
        <item name="android:minWidth">55dp</item>
        <item name="android:orientation">horizontal</item>\
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/selector_white_btn</item>
    </style>
    
    <style name="weibo_btn_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="weibo_btn_text_style_night">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorNightWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

