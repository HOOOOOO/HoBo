<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:windowNoTitle">true</item>
        
        <item name="android:windowTranslucentStatus">true</item>
        <!-- API 21 theme customizations can go here. -->
    </style>
    
    <style name="TranBackground" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="MyTransparent" parent="Theme.AppCompat.Light.DarkActionBar">  
    	<item name="android:windowBackground">@color/tran</item>  
    	<item name="android:windowNoTitle">true</item>  
    	<item name="android:windowIsTranslucent">true</item> 
    	<item name="android:windowTranslucentStatus">true</item>
    	<!--  <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> -->
	</style>  

</resources>
