<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backgruand">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            style="@style/DialogText.Title"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/setting_text_color"
            android:textSize="20sp" 
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:text="转发"/>

    </RelativeLayout>

     <View 
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#50cccccc"/>
        
         <RelativeLayout 
             android:id="@+id/content"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/message"
                 style="@style/DialogText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:padding="5dip" />
             
         </RelativeLayout>
        

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/positiveButton"
            android:background="@drawable/white_btn_backgruand"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="直接转发"
            android:textColor="@color/setting_text_color"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:singleLine="true"
            />

         <View 
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:background="#50cccccc"/>
        <Button
            android:id="@+id/negativeButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_choose_backgruand"
            android:singleLine="true"
            android:text="编辑转发"
            android:textColor="@color/setting_text_color"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:textSize="20sp" />

    </LinearLayout>

    
</LinearLayout>
