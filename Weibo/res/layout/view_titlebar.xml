<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_titlebar"
        android:gravity="center_vertical">
        <View
            android:id="@+id/tb_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <ImageButton
            android:id="@+id/slide_btn"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:src="@drawable/slide_disk"
            android:background="@drawable/selector_rounded_titlebar_btn"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:tint="@color/colorTitle1"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_below="@id/tv_username"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/left_btn"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/shape_round"
                android:background="@drawable/selector_rounded_titlebar_btn"
                android:alpha="112.5"
                android:tint="@color/colorTitle1"/>
            <ImageButton
                android:id="@+id/right_btn"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/shape_round"
                android:background="@drawable/selector_rounded_titlebar_btn"
                android:alpha="112.5"
                android:tint="@color/colorTitle1"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:src="@drawable/search_focus"
            android:background="@drawable/selector_rounded_titlebar_btn"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:tint="@color/colorTitle1"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/titlebar_shadow"
        android:background="@drawable/shape_shadow"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_titlebar_shadow"
        android:layout_below="@id/titlebar"/>
</LinearLayout>
