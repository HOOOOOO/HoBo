<?xml version="1.0" encoding="utf-8"?>
<com.example.view.SwipeBackLayout android:id="@+id/swpb_search" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#80000000" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:id="@+id/ll_searchBackground" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
            <View android:id="@+id/v_statusview" android:layout_width="fill_parent" android:layout_height="25dp" android:background="@android:color/transparent" />
            <include layout="@layout/simple_title" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <RelativeLayout android:id="@+id/rl_contain" android:layout_width="fill_parent" android:layout_height="wrap_content"></RelativeLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="50dp" android:orientation="horizontal" android:layout_margin="8dp" android:background="@drawable/shape_rounded_rectangle">
                <EditText android:id="@+id/edtv_search" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:background="@null" android:cursorVisible="false" android:textSize="15sp" android:layout_marginLeft="10dp" />
                <Button android:layout_width="50dp" android:layout_height="fill_parent" android:background="@drawable/white_btn_backgruand" android:text="搜索" android:textColor="@color/setting_text_color" android:textSize="15sp" android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
        <View android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/colorNightBackgrond" />
    </RelativeLayout>
</com.example.view.SwipeBackLayout>