<?xml version="1.0" encoding="UTF-8"?>
<com.example.view.SwipeBackLayout 
    android:id="@+id/comment_swipeback"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/comment_ll_background"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    
    	android:orientation="vertical"
    	android:padding="8dp"
    	android:background="@android:color/transparent">
    
    <android.support.v4.widget.SwipeRefreshLayout
    	android:id="@+id/srl_commentrefresh" 
    	android:layout_width="fill_parent"  
    	android:layout_height="fill_parent" 
    	android:orientation="vertical" 
    	android:layout_weight="1">
    	<ListView 
        	android:id="@+id/lv_comments"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:divider="#50cccccc"
        	android:dividerHeight="0.1dp"
        	android:background="@drawable/shape_rounded_rectangle"></ListView>
    
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rounded_rectangle">
        <EditText 
            android:id="@+id/ed_sendcomment"
            android:cursorVisible="false"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/colorWeiboText1"
            android:background="@null"
            android:textSize="14sp"/>
        <Button 
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="fill_parent"
            android:textColor="#cccccccc"
            android:text="返回"
            android:background="@drawable/white_btn_backgruand"/>
    </LinearLayout>
</LinearLayout>
</com.example.view.SwipeBackLayout>
